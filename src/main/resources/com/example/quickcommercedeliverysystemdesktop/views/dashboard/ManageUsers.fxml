<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.ManageUsersController"
      spacing="20" styleClass="admin-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Text text="ðŸ‘¥ Manage Users" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="âž• Add User" onAction="#handleAddUser" styleClass="btn-primary"/>
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="btn-primary"/>
    </HBox>

    <!-- Statistics Row -->
    <HBox spacing="15" styleClass="stats-row">
        <VBox styleClass="stat-card stat-card-blue" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="totalUsersLabel" text="Total: 0" styleClass="stat-value-small"/>
        </VBox>

        <VBox styleClass="stat-card stat-card-orange" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="bannedUsersLabel" text="Banned: 0" styleClass="stat-value-small"/>
        </VBox>

        <VBox styleClass="stat-card stat-card-purple" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="adminUsersLabel" text="Admins: 0" styleClass="stat-value-small"/>
        </VBox>
    </HBox>

    <!-- Filter Section -->
    <HBox spacing="15" styleClass="filter-section" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15"/>
        </padding>

        <Label text="ðŸ” Search:" styleClass="filter-label"/>
        <TextField fx:id="searchField" promptText="Search by name, email, or phone..."
                   prefWidth="300" styleClass="search-field"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Filter:" styleClass="filter-label"/>
        <ComboBox fx:id="filterComboBox" prefWidth="180" styleClass="filter-combo"/>
    </HBox>

    <!-- Users Table -->
    <VBox VBox.vgrow="ALWAYS" styleClass="content-card">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="users-table">
            <columns>
                <TableColumn fx:id="userIdColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="300"/>
            </columns>
            <placeholder>
                <Label text="No users found" styleClass="placeholder-label"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Help Text -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="ðŸ’¡ Tip: Click View to see full details, Edit to modify info, Ban to restrict access, or Delete to remove user"
               styleClass="help-text" wrapText="true"/>
    </HBox>
</VBox>

