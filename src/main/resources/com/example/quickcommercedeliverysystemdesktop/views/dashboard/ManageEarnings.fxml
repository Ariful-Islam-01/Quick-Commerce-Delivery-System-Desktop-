<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.ManageEarningsController"
      spacing="20" styleClass="admin-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Text text="ðŸ’µ Manage Earnings" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ“¥ Export CSV" onAction="#handleExportCSV" styleClass="btn-primary"
                style="-fx-background-color: #27ae60;"/>
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="btn-primary"/>
    </HBox>

    <!-- Total Earnings Card -->
    <HBox spacing="15">
        <VBox styleClass="stat-card stat-card-green" HBox.hgrow="ALWAYS">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Total System Earnings" styleClass="stat-card-title"
                   style="-fx-font-size: 16px;"/>
            <Label fx:id="totalEarningsLabel" text="0.00" styleClass="stat-card-value"
                   style="-fx-font-size: 42px; -fx-text-fill: #27ae60;"/>
            <Label fx:id="earningsCountLabel" text="0 transactions" styleClass="stat-card-subtitle"/>
        </VBox>
    </HBox>

    <!-- Filter Section -->
    <HBox spacing="15" styleClass="filter-section" alignment="CENTER_LEFT">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15"/>
        </padding>

        <Label text="Delivery Person:" styleClass="filter-label"/>
        <ComboBox fx:id="deliveryPersonComboBox" prefWidth="250" styleClass="filter-combo"/>

        <Label text="From Date:" styleClass="filter-label"/>
        <DatePicker fx:id="fromDatePicker" prefWidth="150"/>

        <Label text="To Date:" styleClass="filter-label"/>
        <DatePicker fx:id="toDatePicker" prefWidth="150"/>

        <Button text="Apply Filters" onAction="#handleApplyFilters" styleClass="btn-primary"/>
        <Button text="Clear" onAction="#handleClearFilters" styleClass="secondary-button"/>
    </HBox>

    <!-- Earnings Table -->
    <VBox VBox.vgrow="ALWAYS" styleClass="content-card">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <TableView fx:id="earningsTable" VBox.vgrow="ALWAYS" styleClass="orders-table">
            <columns>
                <TableColumn fx:id="earningIdColumn" text="ID" prefWidth="60"/>
                <TableColumn fx:id="orderIdColumn" text="Order" prefWidth="80"/>
                <TableColumn fx:id="deliveryPersonColumn" text="Delivery Person" prefWidth="180"/>
                <TableColumn fx:id="customerColumn" text="Customer" prefWidth="150"/>
                <TableColumn fx:id="productColumn" text="Product" prefWidth="180"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
                <TableColumn fx:id="dateColumn" text="Date &amp; Time" prefWidth="160"/>
            </columns>
            <placeholder>
                <Label text="No earnings found" styleClass="placeholder-label"/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Help Text -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="ðŸ’¡ Tip: Use filters to view earnings by specific delivery person or date range. Export to CSV for reporting."
               styleClass="help-text" wrapText="true"/>
    </HBox>
</VBox>

