<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.MainDashboardController"
            prefWidth="800" prefHeight="520">

    <top>
        <HBox spacing="10" styleClass="topbar" alignment="CENTER_LEFT" padding="10">

            <Label text="Quick Commerce - Dashboard"
                   style="-fx-font-size:18px; -fx-font-weight:600;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- ðŸ”¥ FIX ADDED: fx:id for logout button -->
            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#handleLogout"
                    styleClass="btn-ghost"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Welcome to the Quick Commerce Dashboard"
                   style="-fx-font-size:16px;"/>

            <Label text="(This is a placeholder. Implement features next.)"
                   style="-fx-font-size:12px; -fx-text-fill:#666;"/>
        </VBox>
    </center>

</BorderPane>
