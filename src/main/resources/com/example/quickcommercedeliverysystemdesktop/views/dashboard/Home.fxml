<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.HomeController"
      spacing="25" styleClass="content-area">

    <!-- Welcome Header -->
    <VBox spacing="10">
        <Label fx:id="welcomeLabel" text="Welcome back!" styleClass="page-title"/>
        <Label text="Quick Commerce Delivery System - Your peer-to-peer delivery platform"
               styleClass="page-subtitle"/>
    </VBox>

    <!-- Quick Stats Section -->
    <VBox spacing="15">
        <Label text="Quick Statistics" styleClass="section-title"/>

        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>

            <!-- My Orders Card -->
            <VBox GridPane.columnIndex="0" styleClass="stat-card, stat-card-blue" spacing="8">
                <Label text="ðŸ“¦ My Orders" styleClass="stat-card-title"/>
                <Label fx:id="myOrdersCountLabel" text="0" styleClass="stat-card-value">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Total orders created" styleClass="stat-card-subtitle"/>
            </VBox>

            <!-- Deliveries Card -->
            <VBox GridPane.columnIndex="1" styleClass="stat-card, stat-card-green" spacing="8">
                <Label text="ðŸšš Deliveries" styleClass="stat-card-title"/>
                <Label fx:id="deliveriesCountLabel" text="0" styleClass="stat-card-value">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Active deliveries" styleClass="stat-card-subtitle"/>
            </VBox>

            <!-- Earnings Card -->
            <VBox GridPane.columnIndex="2" styleClass="stat-card, stat-card-orange" spacing="8">
                <Label text="ðŸ’° Earnings" styleClass="stat-card-title"/>
                <Label fx:id="earningsLabel" text="à§³0.00" styleClass="stat-card-value">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Total earnings" styleClass="stat-card-subtitle"/>
            </VBox>
        </GridPane>
    </VBox>

    <!-- Quick Actions Section -->
    <VBox spacing="15">
        <Label text="Quick Actions" styleClass="section-title"/>

        <HBox spacing="15">
            <!-- Create Order Button -->
            <Button text="+ Create New Order"
                    onAction="#handleCreateOrder"
                    styleClass="primary-button"
                    prefWidth="200"/>

            <!-- View Available Orders Button -->
            <Button text="ðŸ” Browse Available Orders"
                    onAction="#handleBrowseOrders"
                    styleClass="primary-button"
                    style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954);"
                    prefWidth="220"/>

            <!-- My Deliveries Button -->
            <Button text="ðŸ“‹ My Deliveries"
                    onAction="#handleMyDeliveries"
                    styleClass="primary-button"
                    style="-fx-background-color: linear-gradient(to bottom, #f39c12, #e67e22);"
                    prefWidth="200"/>
        </HBox>
    </VBox>

    <!-- Recent Activity Section -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <Label text="Recent Activity" styleClass="section-title"/>

        <ListView fx:id="recentActivityList" styleClass="table-view" prefHeight="200">
            <placeholder>
                <Label text="No recent activity" styleClass="placeholder-label"/>
            </placeholder>
        </ListView>
    </VBox>

    <!-- Footer Tips -->
    <HBox styleClass="info-label" style="-fx-padding: 15;">
        <Label text="ðŸ’¡ Tip: Keep your profile updated and respond to deliveries quickly to build your reputation!"
               wrapText="true"/>
    </HBox>

</VBox>
