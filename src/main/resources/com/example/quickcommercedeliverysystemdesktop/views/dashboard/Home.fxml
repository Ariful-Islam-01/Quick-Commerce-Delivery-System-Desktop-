<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.HomeController"
      spacing="25" style="-fx-padding: 30;">

    <!-- Welcome Header -->
    <VBox spacing="10">
        <Label fx:id="welcomeLabel" text="Welcome back!"
               style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
        <Label text="Quick Commerce Delivery System - Your peer-to-peer delivery platform"
               style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
    </VBox>

    <!-- Quick Stats Section -->
    <VBox spacing="15">
        <Label text="Quick Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>

            <!-- My Orders Card -->
            <VBox GridPane.columnIndex="0"
                  style="-fx-background-color: #e3f2fd; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="ðŸ“¦ My Orders" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="myOrdersCountLabel" text="0"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #1976d2;">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Total orders created" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Deliveries Card -->
            <VBox GridPane.columnIndex="1"
                  style="-fx-background-color: #e8f5e9; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="ðŸšš Deliveries" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="deliveriesCountLabel" text="0"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #388e3c;">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Active deliveries" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>

            <!-- Earnings Card -->
            <VBox GridPane.columnIndex="2"
                  style="-fx-background-color: #fff3e0; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="ðŸ’° Earnings" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="earningsLabel" text="0.00"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f57c00;">
                    <padding><Insets top="10"/></padding>
                </Label>
                <Label text="Total earnings" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>
        </GridPane>
    </VBox>

    <!-- Quick Actions Section -->
    <VBox spacing="15">
        <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="15">
            <!-- Create Order Button -->
            <Button text="+ Create New Order"
                    onAction="#handleCreateOrder"
                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-padding: 15 30; -fx-background-radius: 8; -fx-cursor: hand;"
                    prefWidth="200"/>

            <!-- View Available Orders Button -->
            <Button text="ðŸ” Browse Available Orders"
                    onAction="#handleBrowseOrders"
                    style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-padding: 15 30; -fx-background-radius: 8; -fx-cursor: hand;"
                    prefWidth="200"/>

            <!-- My Deliveries Button -->
            <Button text="ðŸ“‹ My Deliveries"
                    onAction="#handleMyDeliveries"
                    style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-padding: 15 30; -fx-background-radius: 8; -fx-cursor: hand;"
                    prefWidth="200"/>
        </HBox>
    </VBox>

    <!-- Recent Activity Section -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <Label text="Recent Activity" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ListView fx:id="recentActivityList"
                  style="-fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;"
                  prefHeight="200">
            <placeholder>
                <Label text="No recent activity" style="-fx-text-fill: #999;"/>
            </placeholder>
        </ListView>
    </VBox>

    <!-- Footer Tips -->
    <HBox style="-fx-padding: 15; -fx-background-color: #e3f2fd; -fx-background-radius: 8;">
        <Label text="ðŸ’¡ Tip: Keep your profile updated and respond to deliveries quickly to build your reputation!"
               style="-fx-font-size: 12px; -fx-text-fill: #1976d2;" wrapText="true"/>
    </HBox>

</VBox>
