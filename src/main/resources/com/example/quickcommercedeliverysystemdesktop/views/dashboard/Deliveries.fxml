<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.DeliveriesController"
      spacing="20" style="-fx-padding: 20;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Delivery Partner Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh" styleClass="action-button"/>
    </HBox>

    <!-- Statistics Cards -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>

        <!-- Total Deliveries Card -->
        <VBox GridPane.columnIndex="0" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Total Deliveries" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="totalDeliveriesLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1976d2;">
                <padding><Insets top="5"/></padding>
            </Label>
        </VBox>

        <!-- Completed Card -->
        <VBox GridPane.columnIndex="1" style="-fx-background-color: #e8f5e9; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Completed" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="completedDeliveriesLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #388e3c;">
                <padding><Insets top="5"/></padding>
            </Label>
        </VBox>

        <!-- In Progress Card -->
        <VBox GridPane.columnIndex="2" style="-fx-background-color: #fff3e0; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="In Progress" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="inProgressLabel" text="0" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #f57c00;">
                <padding><Insets top="5"/></padding>
            </Label>
        </VBox>

        <!-- Total Earnings Card -->
        <VBox GridPane.columnIndex="3" style="-fx-background-color: #f3e5f5; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Total Earnings" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="totalEarningsLabel" text="0.00" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #7b1fa2;">
                <padding><Insets top="5"/></padding>
            </Label>
        </VBox>
    </GridPane>

    <!-- Tab Pane for Available Orders and My Deliveries -->
    <TabPane fx:id="deliveryTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE"
             styleClass="custom-tab-pane">

        <!-- Available Orders Tab -->
        <Tab styleClass="custom-tab">
            <graphic>
                <HBox spacing="8" alignment="CENTER">
                    <Label text="ðŸ“¦" style="-fx-font-size: 16px;"/>
                    <Label text="Available Orders" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
            </graphic>
            <VBox spacing="15" style="-fx-padding: 15;">

                <!-- Available Orders Header -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="availableCountLabel" text="Available: 0" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Orders waiting to be accepted" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                </HBox>

                <!-- Search and Sort Controls -->
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8;">
                    <Label text="ðŸ”" style="-fx-font-size: 16px;"/>
                    <TextField fx:id="searchTextField" promptText="Search by item name..." prefWidth="250"
                               style="-fx-background-radius: 6; -fx-padding: 8;"/>
                    <Label text="Sort by:" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <ComboBox fx:id="sortComboBox" prefWidth="180" promptText="Select sort order..."
                              style="-fx-background-radius: 6;"/>
                    <Button fx:id="clearFiltersButton" text="Clear" onAction="#handleClearFilters"
                            style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand;"/>
                </HBox>

                <!-- Available Orders Cards -->
                <ScrollPane fx:id="availableCardsScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <GridPane fx:id="availableCardsContainer" hgap="20" vgap="20">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </GridPane>
                </ScrollPane>

                <!-- Empty State for Available Orders -->
                <VBox fx:id="availableEmptyState" alignment="CENTER" spacing="15"
                      VBox.vgrow="ALWAYS" managed="false" visible="false">
                    <Label text="ðŸ“¦" style="-fx-font-size: 64px;"/>
                    <Label text="No available orders" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label text="Check back later for new delivery opportunities!"
                           style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                </VBox>
            </VBox>
        </Tab>

        <!-- My Deliveries Tab -->
        <Tab styleClass="custom-tab">
            <graphic>
                <HBox spacing="8" alignment="CENTER">
                    <Label text="ðŸšš" style="-fx-font-size: 16px;"/>
                    <Label text="My Deliveries" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                </HBox>
            </graphic>
            <VBox spacing="15" style="-fx-padding: 15;">

                <!-- My Deliveries Header with Filter -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="myDeliveriesCountLabel" text="My Deliveries: 0" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="Filter by Status:"/>
                    <ComboBox fx:id="deliveryStatusFilter" prefWidth="150"/>
                </HBox>

                <!-- My Deliveries Cards -->
                <ScrollPane fx:id="myDeliveriesCardsScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <GridPane fx:id="myDeliveriesCardsContainer" hgap="20" vgap="20">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </GridPane>
                </ScrollPane>

                <!-- Empty State for My Deliveries -->
                <VBox fx:id="myDeliveriesEmptyState" alignment="CENTER" spacing="15"
                      VBox.vgrow="ALWAYS" managed="false" visible="false">
                    <Label text="ðŸšš" style="-fx-font-size: 64px;"/>
                    <Label text="No deliveries yet" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label text="Accept orders from the Available Orders tab to get started!"
                           style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                </VBox>
            </VBox>
        </Tab>
    </TabPane>

    <!-- Info Footer -->
    <HBox style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-background-radius: 5;">
        <Label text="ðŸ’¡ Tip: Accept orders quickly to earn more! Update delivery status in real-time."
               style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
    </HBox>

</VBox>
