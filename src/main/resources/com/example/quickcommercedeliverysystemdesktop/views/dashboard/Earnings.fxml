<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.EarningsController"
            fitToWidth="true"
            style="-fx-background-color: #f5f7fa; -fx-background: #f5f7fa;"
            vbarPolicy="ALWAYS"
            hbarPolicy="NEVER">

<VBox spacing="25" style="-fx-padding: 25; -fx-background-color: #f5f7fa;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10 0;">
        <Label text="ðŸ’° Earnings Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 13px;"/>
        <Button text="ðŸ“Š Export Report" onAction="#handleExportReport"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-font-size: 13px;"/>
    </HBox>

    <!-- Statistics Cards Row 1 -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
        </columnConstraints>

        <!-- Total Earnings Card -->
        <VBox GridPane.columnIndex="0" style="-fx-background-color: linear-gradient(to bottom right, #8e44ad, #9b59b6); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(142, 68, 173, 0.3), 15, 0, 0, 5);">
            <Label text="ðŸ’µ Total Earnings" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="totalEarningsLabel" text="à§³0.00"
                   style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="All time earnings" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>

        <!-- Today Earnings Card -->
        <VBox GridPane.columnIndex="1" style="-fx-background-color: linear-gradient(to bottom right, #27ae60, #2ecc71); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(39, 174, 96, 0.3), 15, 0, 0, 5);">
            <Label text="ðŸ“… Today's Earnings" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="todayEarningsLabel" text="à§³0.00"
                   style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="Earned today" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>

        <!-- Completed Deliveries Card -->
        <VBox GridPane.columnIndex="2" style="-fx-background-color: linear-gradient(to bottom right, #3498db, #5dade2); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(52, 152, 219, 0.3), 15, 0, 0, 5);">
            <Label text="âœ… Completed Deliveries" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="completedDeliveriesLabel" text="0"
                   style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="Total completed" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>
    </GridPane>

    <!-- Statistics Cards Row 2 -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
        </columnConstraints>

        <!-- Week Earnings Card -->
        <VBox GridPane.columnIndex="0" style="-fx-background-color: linear-gradient(to bottom right, #e67e22, #f39c12); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(230, 126, 34, 0.3), 15, 0, 0, 5);">
            <Label text="ðŸ“† This Week" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="weekEarningsLabel" text="à§³0.00"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="Last 7 days" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>

        <!-- Month Earnings Card -->
        <VBox GridPane.columnIndex="1" style="-fx-background-color: linear-gradient(to bottom right, #e74c3c, #ec7063); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(231, 76, 60, 0.3), 15, 0, 0, 5);">
            <Label text="ðŸ“Š This Month" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="monthEarningsLabel" text="à§³0.00"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="Last 30 days" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>

        <!-- Average Earning Card -->
        <VBox GridPane.columnIndex="2" style="-fx-background-color: linear-gradient(to bottom right, #16a085, #1abc9c); -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(22, 160, 133, 0.3), 15, 0, 0, 5);">
            <Label text="ðŸ“ˆ Average per Delivery" style="-fx-font-size: 15px; -fx-text-fill: rgba(255,255,255,0.95); -fx-font-weight: bold; -fx-letter-spacing: 0.5px;"/>
            <Label fx:id="averageEarningLabel" text="à§³0.00"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="12" bottom="5"/></padding>
            </Label>
            <Label text="Avg. earning" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.85);"/>
        </VBox>
    </GridPane>

    <!-- Earnings Chart -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="ðŸ“ˆ Daily Earnings Trend" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Last 7 Days" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
        </HBox>
        <BarChart fx:id="earningsChart" prefHeight="280" animated="true"
                  style="-fx-background-color: white; -fx-plot-background-color: #f8f9fa;">
            <xAxis>
                <CategoryAxis fx:id="xAxis" side="BOTTOM"
                             style="-fx-tick-label-fill: #34495e; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT"
                           style="-fx-tick-label-fill: #34495e; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            </yAxis>
        </BarChart>
    </VBox>

    <!-- Earnings History Section -->
    <VBox spacing="15" minHeight="300"
          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

        <!-- History Header with Filter -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="ðŸ“‹ Earnings History" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Period:" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
            <ComboBox fx:id="periodFilter" prefWidth="150"
                      style="-fx-background-radius: 6; -fx-border-color: #bdc3c7; -fx-border-radius: 6;"/>
            <Label fx:id="recordsCountLabel" text="Showing 0 record(s)"
                   style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Earnings History Table -->
        <TableView fx:id="earningsTable" minHeight="200" prefHeight="380"
                   style="-fx-background-color: white; -fx-border-color: #ecf0f1; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="80" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="90" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="productColumn" text="Product" prefWidth="200"/>
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="220"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" style="-fx-alignment: CENTER-RIGHT;"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 40;">
                    <Label text="ðŸ’µ" style="-fx-font-size: 64px;"/>
                    <Label text="No earnings yet" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d; -fx-font-weight: bold;"/>
                    <Label text="Complete deliveries to start earning!" style="-fx-font-size: 13px; -fx-text-fill: #95a5a6;"/>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Info Footer -->
    <HBox style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-background-radius: 10; -fx-border-color: #d6eaf8; -fx-border-radius: 10; -fx-border-width: 1;">
        <Label text="ðŸ’¡ Tip: Keep track of your earnings and aim for consistent delivery performance to maximize your income!"
               style="-fx-font-size: 13px; -fx-text-fill: #2980b9; -fx-font-weight: bold;" wrapText="true"/>
    </HBox>

</VBox>

</ScrollPane>

