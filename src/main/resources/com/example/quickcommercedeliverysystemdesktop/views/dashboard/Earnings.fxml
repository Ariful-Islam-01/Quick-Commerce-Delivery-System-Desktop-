<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.quickcommercedeliverysystemdesktop.controllers.dashboard.EarningsController"
            fitToWidth="true" fitToHeight="true"
            style="-fx-background-color: transparent;">

<VBox spacing="20" style="-fx-padding: 20;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="ðŸ’° Earnings Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
        <Button text="Export Report" onAction="#handleExportReport"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Statistics Cards Row 1 -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
        </columnConstraints>

        <!-- Total Earnings Card -->
        <VBox GridPane.columnIndex="0" style="-fx-background-color: #8e44ad; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Total Earnings" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="totalEarningsLabel" text="0.00"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="All time earnings" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>

        <!-- Today Earnings Card -->
        <VBox GridPane.columnIndex="1" style="-fx-background-color: #27ae60; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Today's Earnings" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="todayEarningsLabel" text="0.00"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="Earned today" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>

        <!-- Completed Deliveries Card -->
        <VBox GridPane.columnIndex="2" style="-fx-background-color: #3498db; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Completed Deliveries" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="completedDeliveriesLabel" text="0"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="Total completed" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>
    </GridPane>

    <!-- Statistics Cards Row 2 -->
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
            <ColumnConstraints percentWidth="33.33"/>
        </columnConstraints>

        <!-- Week Earnings Card -->
        <VBox GridPane.columnIndex="0" style="-fx-background-color: #e67e22; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="This Week" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="weekEarningsLabel" text="0.00"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="Last 7 days" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>

        <!-- Month Earnings Card -->
        <VBox GridPane.columnIndex="1" style="-fx-background-color: #e74c3c; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="This Month" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="monthEarningsLabel" text="0.00"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="Last 30 days" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>

        <!-- Average Earning Card -->
        <VBox GridPane.columnIndex="2" style="-fx-background-color: #16a085; -fx-padding: 20; -fx-background-radius: 10;">
            <Label text="Average per Delivery" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="averageEarningLabel" text="0.00"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;">
                <padding><Insets top="10"/></padding>
            </Label>
            <Label text="Avg. earning" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
        </VBox>
    </GridPane>

    <!-- Earnings Chart -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="Daily Earnings Trend" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        <BarChart fx:id="earningsChart" prefHeight="250" animated="true">
            <xAxis>
                <CategoryAxis fx:id="xAxis" side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT"/>
            </yAxis>
        </BarChart>
    </VBox>

    <!-- Earnings History Section -->
    <VBox spacing="15" VBox.vgrow="ALWAYS" minHeight="300" prefHeight="400"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- History Header with Filter -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Earnings History" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Period:"/>
            <ComboBox fx:id="periodFilter" prefWidth="150"/>
            <Label fx:id="recordsCountLabel" text="Showing 0 record(s)"
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </HBox>

        <!-- Earnings History Table -->
        <TableView fx:id="earningsTable" VBox.vgrow="ALWAYS" minHeight="200" prefHeight="300">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="80"/>
                <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="90"/>
                <TableColumn fx:id="productColumn" text="Product" prefWidth="180"/>
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="200"/>
                <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100"/>
            </columns>
            <placeholder>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30;">
                    <Label text="ðŸ’µ" style="-fx-font-size: 48px;"/>
                    <Label text="No earnings yet" style="-fx-font-size: 16px; -fx-text-fill: #999;"/>
                    <Label text="Complete deliveries to start earning!" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                </VBox>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Info Footer -->
    <HBox style="-fx-padding: 10; -fx-background-color: #f0f8ff; -fx-background-radius: 5;">
        <Label text="ðŸ’¡ Tip: Keep track of your earnings and aim for consistent delivery performance to maximize your income!"
               style="-fx-font-size: 12px; -fx-text-fill: #2980b9;" wrapText="true"/>
    </HBox>

</VBox>

</ScrollPane>

